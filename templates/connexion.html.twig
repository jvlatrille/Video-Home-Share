{% extends 'base_template.html.twig' %}
    {% block title %}Connexion - {{ constant('WEBSITE_TITLE')}} 
    
    
    <form action="index.php?controller=utilisateur&methode=creer" method="POST" class="text-center col-12 col-md-6 col-lg-4 mx-auto my-auto p-4">
        <div class="bg-mydark text-white rounded p-4 mb-5">
            <h3 class="mb-3 fw-bold">Connexion</h3>

            <!-- Champ Email -->
            <div class="form-group mb-3">
                <label for="email" class="d-block text-start mb-0 fw-light">Mail</label> <!-- Align label à gauche -->
                <input type="email" name="mail" id="email" class="form-control" required>
            </div>

            <!-- Champ Mot de Passe -->
            <div class="form-group mb-4">
                <label for="password" class="d-block text-start mb-0">Mot de passe</label> <!-- Align label à gauche -->
                <input type="password" name="pwd" id="password" class="form-control" required>
                <a href="index.php?controller=utilisateur&methode=afficherpageMDPOublier" class="text-decoration-underline fw-light text-start text-white">
                    <p>Mot de passe oublié ?</p>
                </a>
            </div>

            <input type="submit" class="btn btn-myprimary my-2 mx-auto" value="Se connecter">
                <a href="index.php?controller=utilisateur&methode=inscription" class="text-white mt-2 fw-light">Créer un compte</a>
        </div>
        
    </form>
    
    
    
    
    
    
    {% endblock %}