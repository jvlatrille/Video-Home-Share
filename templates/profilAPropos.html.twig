{% extends 'base_template_profil.html.twig' %}
    {% block title %}Profil : A Propos - {{ constant('WEBSITE_TITLE')}} {% endblock %}
   
    
{% block title %}
    A Propos - {{ constant('WEBSITE_TITLE')}} 
{% endblock %}
    


{% block content %}    
    <!-- Titre de la partie notification -->
    <div class="container mt-2">
        <h1>A propos</h1>
    </div>


    {% block content %}
    <!-- Titre principal de la page -->
    <h1>{{forum.nom}}</h1>

    <!-- Affichage des messages -->
    {% if messageListe is empty %}
        <p class="text-center">Aucun message poster.</p>
    {% else %}
        <div class="container">
            {% for message in messageListe %}
                <div class="card mb-4">
                    <div class="card-body">
                        <p>{{ message.contenu }}</p>
                    </div>

                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <div>
                            <form method="POST" action="index.php?controleur=message&methode=like">
                                <input type="hidden" name="idMessage" value="{{ message.idMessage }}">
                                <p>üëç {{ message.nbLikes }}</p>
                            </form>
                            <form method="POST" action="index.php?controleur=message&methode=dislike">
                                <input type="hidden" name="idMessage" value="{{ message.idMessage }}">
                                <p>üëé {{ message.nbDislikes }}</p>
                            </form>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

{% endblock %}