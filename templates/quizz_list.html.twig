{% extends 'base_template.html.twig' %}

{% block content %}
    <div class="container">
        <div class="text-center mb-4">
            <h1>LOGO (Quizz)</h1>
        </div>
        
        <div class="text-center mb-4">
            <a href="index.php?controleur=quizz&methode=ajouterQuizz" class="btn btn-primary">Créer un quizz</a>
        </div>

        <h2>Les quizz :</h2>

        <div class="quiz-list">
            {% for quiz in quizzListe %}
                <div class="quiz-item border p-3 mb-3 d-flex justify-content-between align-items-center">
                    <div>
                        <h4>{{ quiz.nom }}</h4>
                        <p>Thème : {{ quiz.theme }}</p>
                    </div>
                    <div>
                        <a href="index.php?controleur=quizz&methode=afficherQuizz&id={{ quiz.idQuizz }}" class="btn btn-secondary">Rejoindre</a>
                    </div>
                </div>
            {% else %}
                <p>Aucun quiz disponible pour l'instant.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
