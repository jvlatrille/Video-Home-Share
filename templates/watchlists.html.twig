{% extends 'base_template.html.twig' %}

{% block content %}
	<div class="container">
		<div class="row">
			<h1 class="col-3">Mes watchlist</h1>
			<!-- Bouton pour ouvrir la pop-up -->
			<div class="col mt-2">
				<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createWatchlistModal">
					+
				</button>
			</div>
		</div>


		<!-- Modal de création de watchlist -->
		<div class="modal fade" id="createWatchlistModal" tabindex="-1" aria-labelledby="createWatchlistModalLabel" aria-hidden="true">
			<div class="modal-dialog modal-lg">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="createWatchlistModalLabel">Créer une nouvelle Watchlist</h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div
						class="modal-body">
						<!-- Formulaire de création de watchlist -->
						<form id="createWatchlistForm" method="POST" action="index.php?controleur=watchlist&methode=ajouterWatchList">
							<div class="mb-3">
								<label for="watchlistTitle" class="form-label">Titre :</label>
								<input type="text" class="form-control" id="watchlistTitle" name="titre" required>
							</div>
							<div class="mb-3">
								<label for="watchlistGenre" class="form-label">Genre :</label>
								<input type="text" class="form-control" id="watchlistGenre" name="genre">
							</div>
							<div class="mb-3">
								<label for="watchlistDescription" class="form-label">Description :</label>
								<textarea class="form-control" id="watchlistDescription" name="description" rows="3"></textarea>
							</div>
							<div class="mb-3">
								<label for="watchlistVisibility" class="form-label">Visibilité :</label>
								<select class="form-select" id="watchlistVisibility" name="visible">
									<option value="1">Publique</option>
									<option value="0">Privée</option>
								</select>
							</div>

							<div class="mb-3">
								<label for="watchlistSuggestions" class="form-label">Suggestions :</label>
								<select class="form-select" id="watchlistSuggestions" name="suggestions" onchange="ajouterWatchlist(this)">
									{% for oa in oas %}
										<option value="{{ oa.idOa }}" data-poster-path="{{ oa.posterPath }}">{{ oa.nom }}</option>
									{% endfor %}
								</select>
							</div>

							<div id="selectedItemsContainer" class="mt-3"></div>

							<!-- Hidden input to store selected IDs -->
							<input type="hidden" id="selectedIds" name="listeOeuvres" value="">

							<script>
								let listeOeuvres = [];

								function ajouterWatchlist(select) {
									const selectedId = select.value;
									if (!listeOeuvres.includes(selectedId)) {
										listeOeuvres.push(selectedId);
										updateSelectedIds();

										const selectedOption = select.options[select.selectedIndex];
										const selectedText = selectedOption.text;
										const selectedImage = selectedOption.getAttribute('data-poster-path');

										const selectedItem = document.createElement('div');
										selectedItem.className = 'selected-item alert alert-secondary d-flex justify-content-between align-items-center mt-2';
										selectedItem.id = 'item-' + selectedId;
										selectedItem.innerHTML = `
											<span class="d-flex align-items-center">
												<img src="${selectedImage}" alt="${selectedText}" class="me-2" style="width: 50px; height: auto;">
												${selectedText}
											</span>
											<button type="button" class="btn-close" aria-label="Remove" onclick="removeFromWatchlist('${selectedId}')"></button>
										`;

										document.getElementById('selectedItemsContainer').appendChild(selectedItem);
									}
								}

								function supprimerDeWatchlist(id) {
									const index = listeOeuvres.indexOf(id);
									if (index > -1) {
										listeOeuvres.splice(index, 1);
										updateSelectedIds();

										const item = document.getElementById('item-' + id);
										if (item) {
											item.remove();
										}
									}
								}

								function updateSelectedIds() {
									document.getElementById('selectedIds').value = JSON.stringify(listeOeuvres);
								}
							</script>


							<!-- Bouton de soumission -->
							<div class="text-center">
								<button type="submit" class="btn btn-primary">Créer une nouvelle watchlist</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>


		<!-- Liste des watchlists de l'utilisateur -->

		{% if watchListListe is defined %}

			{% for watchList in watchListListe %}

				<div class="container text-center mt-2">
					<div class="row">
						<div class="col text-start">
							<a href="index.php?controleur=watchlist&methode=afficherWatchlist&idWatchlist={{watchList.idWatchlist}}">
								<h2>{{watchList.titre}}</h2>
							</a>
						</div>
					</div>
					<div class="row">
						<div class="col-2 d-flex align-items-center justify-content-center">
							<button class="bg-primary" type="button" data-bs-target="#{{watchList.idWatchlist}}" data-bs-slide="prev">
								<span class="carousel-control-prev-icon" aria-hidden="true"></span>
								<span class="visually-hidden">Précédent</span>
							</button>
						</div>
						<div class="col-8">
							<div id="{{watchList.idWatchlist}}" class="carousel slide" data-bs-ride="carousel">
								<div class="carousel-inner">
									<div class="carousel-item active">
										<div class="row">
											{% for oa in watchList.listeOeuvres %}
												<div class="col-12 col-md-4">
													<a href="index.php?controleur=oa&methode=afficherFilm&idOa={{oa.idOa}}"><img src="{{oa.posterPath}}" class="d-block w-100" alt="{{oa.nom}}"></a>
													<p>{{oa.nom}}</p>
												</div>

												{% if loop.index % 3 == 0 %}
												</div>
											</div>
											<div class="carousel-item">
												<div class="row">
												{% endif %}

											{% endfor %}
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="col-2 d-flex align-items-center justify-content-center">
							<button class="bg-primary" type="button" data-bs-target="#{{watchList.idWatchlist}}" data-bs-slide="next">
								<span class="carousel-control-next-icon" aria-hidden="true"></span>
								<span class="visually-hidden">Suivant</span>
							</button>
						</div>
					</div>
				</div>
			{% endfor %}



			<div class="text-center mt-4">
				<a href="index.php?controleur=watchlist&methode=listerWatchListVisible&id={{utilisateurConnecte.idUtilisateur}}" class="btn btn-secondary">Parcourir les watchlists de la communauté</a>
			</div>
		{% endif %}
	</div>

</div>{% endblock %}
