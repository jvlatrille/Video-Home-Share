{% extends "base_template_profil.html.twig" %}

{% block content %}
<!-- Couleur des marges -->
<div style="background-color: #AA8463;">
    <!-- Bloc principal avec des marges -->
    <div class="container-fluid min-vh-100 ms-* me-*m-auto" style="background-color: #D5D0AF; border: none; width: 70%;">
        <div class="p-5">
            {% if mdpValide == True %}
                <!-- Changer mot de passe -->
                <div class="mb-4">
                    <label class="form-label">Veuillez entrer votre mot de passe :</label>
                    <form action="index.php?controleur=profil&methode=verifierMDP" method="POST" class="d-flex align-items-center">
                        <div class="me-2 flex-grow-1">
                            <label for="MDP" class="form-label d-none">Entrer</label>
                            <input type="password" class="form-control" id="MDP" name="MDP">
                        </div>
                        <input type="hidden" name="utilisateurId" value="{{ utilisateur.idUtilisateur }}">
                        <button type="submit" class="btn btn-primary">Changer Mot de Passe</button>
                    </form>
                </div>

                {% if message is defined %}
                    <p> {{ message }} </p>
                {% endif %}

            {% else %}
                <!-- Changer mot de passe -->
                <div class="mb-4">
                    <label class="form-label">Veuillez entrer votre nouveau mot de passe :</label>
                    <form action="index.php?controleur=profil&methode=changerMdp" method="POST" class="d-flex align-items-center">
                        <div class="me-2 flex-grow-1">
                            <label for="MDP1" class="form-label d-none">Entrer</label>
                            <input type="password" class="form-control" id="MDP1" name="MDP1">
                        </div>
                </div>
                
                <!-- Changer mot de passe -->
                <div class="mb-4">
                    <label class="form-label">Veuillez confirmer votre mot de passe :</label>
                        <div class="me-2 flex-grow-1">
                            <label for="MDP2" class="form-label d-none">Entrer</label>
                            <input type="password" class="form-control" id="MDP2" name="MDP2">
                        </div>
                        <input type="hidden" name="utilisateurId" value="{{ utilisateur.idUtilisateur }}">
                        <button type="submit" class="btn btn-primary">Changer Mot de Passe</button>
                    </form>
                </div>
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}
