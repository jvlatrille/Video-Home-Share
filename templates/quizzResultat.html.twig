{% extends "base_template.html.twig" %}

{% block content %}
<a href="javascript:history.back()" class="btn btn-primary mt-2 ms-2 ilFautPatienter">Retour</a>

    <div class="container py-5 text-center">

        <div class="row justify-content-center">
            <div class="col-12 col-md-8">
                <h2 class="mb-4">R√©sultats du Quizz</h2>
                
                <div class="bg-white p-5 shadow rounded">
                    <h3 class="mb-3 text-primary">Votre Score : <strong id="score-display">{{ score }}</strong> / {{ nbTotalQuestions }}</h3>
                    
                    <p id="feedback-message" class="fw-bold"></p>
                    
                    <!-- Image du score -->
                    <img id="score-image" src="" alt="R√©sultat du quizz" class="img-fluid mt-3 rounded shadow" style="max-width: 300px; opacity: 0; transition: opacity 0.5s ease-in-out;"/>
                    
                    <div class="mt-4 d-flex justify-content-center gap-3">
                        <a href="index.php?controleur=question&methode=afficherQuestion&idQuizz={{ idQuizz }}" class="btn btn-primary px-4 ilFautPatienter">Rejouer</a>
                        <a href="index.php?controleur=quizz&methode=listerQuizz" class="btn btn-outline-secondary px-4 ilFautPatienter">Accueil</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    {% block javascripts %}
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                let score = sessionStorage.getItem('score') ? parseInt(sessionStorage.getItem('score')) : 0;
                let totalQuestions = {{ nbTotalQuestions|default(0) }};

                // Mise √† jour du score affich√©
                document.getElementById('score-display').textContent = score;

                // Messages de feedback am√©lior√©s
                const feedbackMessage = document.getElementById('feedback-message');
                if (score === 0) {
                    feedbackMessage.innerHTML = '‚ùå Oups, vous n\'avez pas trouv√© de bonnes r√©ponses. Essayez √† nouveau !';
                    feedbackMessage.classList.add('text-danger');
                } else if (score <= totalQuestions / 4) {
                    feedbackMessage.innerHTML = '‚ö†Ô∏è Pas mal, mais il y a encore du travail √† faire. Continuez √† vous entra√Æner !';
                    feedbackMessage.classList.add('text-warning');
                } else if (score <= totalQuestions / 2) {
                    feedbackMessage.innerHTML = 'üëç Bien jou√© ! Vous avez presque tout bon !';
                    feedbackMessage.classList.add('text-primary');
                } else if (score <= (3 * totalQuestions) / 4) {
                    feedbackMessage.innerHTML = 'üî• Super travail ! Vous √™tes tr√®s proche de la perfection !';
                    feedbackMessage.classList.add('text-success');
                } else {
                    feedbackMessage.innerHTML = 'üèÜ F√©licitations, vous avez r√©ussi le quizz avec un excellent score !';
                    feedbackMessage.classList.add('text-success');
                }

                // Gestion des images en fonction du score
                const scoreImage = document.getElementById('score-image');
                let imagePath = '';

                if (score === 0) {
                    imagePath = 'img/quizzResultats/score-0.jpg';
                } else if (score <= 3) {
                    imagePath = 'img/quizzResultats/score-1-3.jpg';
                } else if (score <= 6) {
                    imagePath = 'img/quizzResultats/score-4-6.jpg';
                } else {
                    imagePath = 'img/quizzResultats/score-7.jpg';
                }

                scoreImage.src = imagePath;
                scoreImage.onload = function () {
                    scoreImage.style.opacity = 1;
                };
            });
        </script>
    {% endblock %}
{% endblock %}
