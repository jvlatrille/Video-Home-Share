{% extends 'base_template.html.twig' %}
{% block content %}
    <!-- Titre principal de la page -->
    <h1>{{forum.nom}}</h1>
    <h4>{{forum.description}}</h4>

    <div class="container text-center my-4">
		<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createMessageModal">
			Ajouter un message
		</button>
	</div>

    <!-- Modal de crÃ©ation de message -->
<div class="modal fade" id="createMessageModal" tabindex="-1" aria-labelledby="createMessageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body">
                <!-- Formulaire d'ajout de message -->
                <form id="createMessageForm" method="POST" action="index.php?controleur=message&methode=ajouterMessage&id={{forumList.idForum}}">
                    <!-- Contenu du message -->
                    <div class="mb-3">
                        <label for="messageContenu" class="form-label">Message :</label>
                        <textarea class="form-control" id="messageContenu" name="contenu" rows="4" required></textarea>
                    </div>

                    <!-- Bouton de soumission -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-success">Ajouter un nouveau message</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



    <!-- Affichage des messages -->
    {% if messageListe is empty %}
        <p class="text-center">Aucun message Ã  afficher pour ce forum.</p>
    {% else %}
        <div class="container">
            {% for message in messageListe %}
                <div class="card mb-4">
                    <div class="card-body">
                        <p>{{ message.contenu }}</p>
                    </div>

                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <div>
                            <form method="POST" action="index.php?controleur=message&methode=like">
                                <input type="hidden" name="idMessage" value="{{ message.idMessage }}">
                                <button type="submit" class="btn btn-success btn-sm">ğŸ‘ {{ message.nbLikes }}</button>
                            </form>
                            <form method="POST" action="index.php?controleur=message&methode=dislike">
                                <input type="hidden" name="idMessage" value="{{ message.idMessage }}">
                                <button type="submit" class="btn btn-danger btn-sm">ğŸ‘ {{ message.nbDislikes }}</button>
                            </form>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    <a href="index.php?controleur=forum&methode=listerForum" class="btn btn-primary">Retour</a>
    {% endif %}
{% endblock %}