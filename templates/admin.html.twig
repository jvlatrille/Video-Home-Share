{% extends 'base_template.html.twig' %}

{% block title %}
    Administration - {{ constant('WEBSITE_TITLE') }}
{% endblock %}

{% block css %}
    {{ parent() }}
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.3.6/css/buttons.dataTables.min.css">
{% endblock %}

{% block content %}
<div class="container my-4">

    <!-- Barre de navigation interne -->
    <div class="row mb-4">
        <div class="col text-center">
            <button id="btnHome" class="btn btn-primary me-2">Accueil</button>
            <button id="btnUsers" class="btn btn-primary me-2">Utilisateurs</button>
            <button id="btnQuizs" class="btn btn-primary">Quizs</button>
        </div>
    </div>

    <!-- SECTION ACCUEIL -->
    <div class="row" id="sectionHome">
        <div class="col text-center">
            <h2>Bonjour</h2>
            <p>Bienvenue sur votre interface d'administration.</p>
        </div>
    </div>

    <!-- SECTION UTILISATEURS -->
    <div class="row" id="sectionUsers" style="display: none;">
        <div class="col">
            <h1 class="mb-4 text-center">Gestion des Utilisateurs</h1>
            <div class="table-responsive">
                <table id="utilisateurTable" class="table table-striped table-hover align-middle shadow-sm" style="width:100%">
                    <thead class="table-dark">
                        <tr>
                            <th>Photo</th>
                            <th>Banni√®re</th>
                            <th>Id</th>
                            <th>Pseudo</th>
                            <th>Email</th>
                            <th>R√¥le</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if utilisateurListe is not empty %}
                            {% for user in utilisateurListe %}
                                <tr>
                                    <td>
                                        <img src="{{ 'img/profils/' ~ user.getPhotoProfil }}"
                                             alt="Photo de {{ user.getPseudo }}"
                                             width="50" height="50"
                                             class="rounded-circle">
                                    </td>
                                    <td>
                                        <img src="{{ 'img/banniere/' ~ user.getBanniereProfil }}"
                                             alt="Banni√®re de {{ user.getPseudo }}"
                                             width="100" height="50"
                                             class="img-thumbnail">
                                    </td>
                                    <td>{{ user.getIdUtilisateur }}</td>
                                    <td>{{ user.getPseudo }}</td>
                                    <td>{{ user.getAdressMail }}</td>
                                    <td>
                                        {% if user.getRole == 'admin' %}
                                            <span class="badge bg-danger">Admin</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Utilisateur</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <a href="index.php?controleur=utilisateur&methode=afficherAutreUtilisateur&pseudo={{ user.getPseudo }}"
                                           class="btn btn-sm btn-info mb-1">
                                           Profil
                                        </a>
                                        <button class="btn btn-sm btn-warning mb-1"
                                                data-bs-toggle="modal"
                                                data-bs-target="#editUserModal{{ user.getIdUtilisateur }}">
                                            Modifier
                                        </button>
                                        <button class="btn btn-sm btn-danger"
                                                onclick="confirmDelete('{{ user.getIdUtilisateur }}')">
                                            Supprimer
                                        </button>
                                    </td>
                                </tr>
                                {# Modal de modification utilisateur, si besoin #}
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center">Aucun utilisateur trouv√©.</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- SECTION QUIZ -->
        <div class="row" id="sectionQuizs" style="display: none;">
            <div class="col">
                <h1 class="mb-4 text-center">Gestion des Quizs</h1>
                <div class="table-responsive mb-4">
                <table id="quizzTable" class="table table-striped table-hover align-middle shadow-sm" style="width:100%">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Th√®me</th>
                            <th>Nombre de Questions</th>
                            <th>Difficult√©</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if quizzListe is not empty %}
                            {% for quizz in quizzListe %}
                                <tr>
                                    <td>{{ quizz.getIdQuizz }}</td>
                                    <td>{{ quizz.getNom }}</td>
                                    <td>{{ quizz.getTheme }}</td>
                                    <td>{{ quizz.getNbQuestion }}</td>
                                    <td>{{ quizz.getDifficulte }}</td>
                                    <td class="text-center">
                                        <!-- Bouton Voir plus ouvre la modale -->
                                        <button class="btn btn-sm btn-info mb-1"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalQuiz{{ quizz.getIdQuizz }}">
                                            Voir plus
                                        </button>
                                        <!-- Bouton Aller √† -->
                                        <a href="index.php?controleur=quizz&methode=afficherQuizz&id={{ quizz.getIdQuizz }}"
                                           class="btn btn-sm btn-success">
                                           Aller √†
                                        </a>
                                    </td>
                                </tr>

                                                        {% endfor %}
                                                    {% else %}
                                                        <tr>
                                                            <td colspan="6" class="text-center">Aucun quiz trouv√©.</td>
                                                        </tr>
                                                    {% endif %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            
                                <!-- Modales pour chaque quiz -->
                                {% if quizzListe is not empty %}
                                    {% for quizz in quizzListe %}
                                        <div class="modal fade" id="modalQuiz{{ quizz.getIdQuizz }}"
                                             tabindex="-1"
                                             aria-labelledby="modalQuizLabel{{ quizz.getIdQuizz }}"
                                             aria-hidden="true">
                                    <div class="modal-dialog modal-xl">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title"
                                                    id="modalQuizLabel{{ quizz.getIdQuizz }}">
                                                    D√©tails du Quiz : {{ quizz.getNom }}
                                                </h5>
                                                <button type="button"
                                                        class="btn-close"
                                                        data-bs-dismiss="modal"
                                                        aria-label="Close">
                                                </button>
                                            </div>

                                            <div class="modal-body">
                                                {% set questions = detailedQuestions[quizz.getIdQuizz] ?? [] %}
                                                {% if questions is not empty %}
                                                    <table class="table table-bordered">
                                                        <thead>
                                                            <tr>
                                                                <th>Num√©ro</th>
                                                                <th>Contenu</th>
                                                                <th>Difficult√©</th>
                                                                <th>Bonne r√©ponse</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            {% for question in questions %}
                                                                <tr>
                                                                    <td>{{ question.getNumero }}</td>
                                                                    <td>{{ question.getContenu }}</td>
                                                                    <td>{{ question.getNvDifficulte }}</td>
                                                                    <td>{{ question.getBonneReponse }}</td>
                                                                </tr>
                                                            {% endfor %}
                                                        </tbody>
                                                    </table>
                                                {% else %}
                                                    <p>Aucune question trouv√©e pour ce quiz.</p>
                                                {% endif %}
                                            </div>

                                            <div class="modal-footer">
                                                <!-- Bouton pour supprimer le quiz -->
                                                <button type="button"
                                                        class="btn btn-danger me-auto"
                                                        onclick="confirmDeleteQuiz('{{ quizz.getIdQuizz }}')">
                                                    Supprimer ce Quiz
                                                </button>
                                                <button type="button"
                                                        class="btn btn-secondary"
                                                        data-bs-dismiss="modal">
                                                    Fermer
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Fin du modal -->
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center">Aucun quiz trouv√©.</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <!-- DataTables JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script>
        // Initialisation DataTables
        $(document).ready(function () {
            $('#utilisateurTable').DataTable({
                responsive: true,
                pageLength: 5,
                language: {
                    search: "üîç Rechercher :",
                    lengthMenu: "Afficher _MENU_ utilisateurs",
                    info: "Affichage de _START_ √† _END_ sur _TOTAL_ utilisateurs",
                    zeroRecords: "Aucun utilisateur trouv√©"
                }
            });

            $('#quizzTable').DataTable({
                responsive: true,
                pageLength: 5,
                language: {
                    search: "üîç Rechercher :",
                    lengthMenu: "Afficher _MENU_ quizs",
                    info: "Affichage de _START_ √† _END_ sur _TOTAL_ quizs",
                    zeroRecords: "Aucun quiz trouv√©"
                }
            });
        });

        // Bascule entre sections
        document.addEventListener('DOMContentLoaded', function () {
            const btnHome    = document.querySelector('#btnHome');
            const btnUsers   = document.querySelector('#btnUsers');
            const btnQuizs   = document.querySelector('#btnQuizs');
            const sectionHome  = document.querySelector('#sectionHome');
            const sectionUsers = document.querySelector('#sectionUsers');
            const sectionQuizs = document.querySelector('#sectionQuizs');

            // Accueil affich√© par d√©faut
            sectionHome.style.display  = 'block';
            sectionUsers.style.display = 'none';
            sectionQuizs.style.display = 'none';

            btnHome.addEventListener('click', function () {
                sectionHome.style.display  = 'block';
                sectionUsers.style.display = 'none';
                sectionQuizs.style.display = 'none';
            });
            btnUsers.addEventListener('click', function () {
                sectionHome.style.display  = 'none';
                sectionUsers.style.display = 'block';
                sectionQuizs.style.display = 'none';
            });
            btnQuizs.addEventListener('click', function () {
                sectionHome.style.display  = 'none';
                sectionUsers.style.display = 'none';
                sectionQuizs.style.display = 'block';
            });
        });

        // Confirmation pour supprimer un utilisateur
        function confirmDelete(userId) {
            if (confirm("√ätes-vous s√ªr de vouloir supprimer cet utilisateur ? Cette action est irr√©versible !")) {
                window.location.href = "index.php?controleur=admin&methode=supprimerUtilisateur&id=" + userId;
            }
        }

        // Confirmation pour supprimer un quiz
        function confirmDeleteQuiz(quizzId) {
            if (confirm("√ätes-vous s√ªr de vouloir supprimer ce quiz ?")) {
                window.location.href = "index.php?controleur=quizz&methode=supprimerQuizz&id=" + quizzId;
            }
        }
    </script>
{% endblock %}
