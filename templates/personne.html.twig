{% extends "base_template.html.twig" %}

{% block content %}
	<div class="container my-4">
		<h1 class="text-center">Liste des Personnes</h1>

		{% if personnesListe is not empty %}
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>#</th>
						<th>Nom</th>
						<th>Prénom</th>
						<th>Date de Naissance</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for personne in personnesListe %}
						<tr>
							<td>{{ personne.IdPersonne }}</td>
							<td>{{ personne.nom }}</td>
							<td>{{ personne.prenom }}</td>
							<td>{{ personne.dateNaiss|date("d/m/Y") }}</td>
							<td>
								<!-- Placeholder pour les actions -->
								<a href="#" class="btn btn-primary btn-sm">Voir</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% else %}
			<p class="text-center">Aucune personne trouvée.</p>
		{% endif %}

		<!-- Navigation pour la pagination -->
		<nav aria-label="Pagination">
			<ul class="pagination justify-content-center">
				{% if page > 1 %}
					<li class="page-item">
						<a class="page-link" href="index.php?controleur=personne&methode=listerPersonnes&page={{ page - 1 }}">Précédent</a>
					</li>
				{% endif %}
				<li class="page-item">
					<a class="page-link" href="index.php?controleur=personne&methode=listerPersonnes&page={{ page + 1 }}">Suivant</a>
				</li>
			</ul>
		</nav>
	</div>
{% endblock %}
