<!DOCTYPE html>
<html lang="{{ constant('WEBSITE_LANGUAGE')}}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="{{ constant('WEBSITE_LOGO') }}">
    <link rel="stylesheet" type="text/css" href="node_modules/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/styles.css">
    <script src="node_modules/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <meta name="description" content="{% if description is defined %} {{ description }} {% else %} {{ constant('WEBSITE_DESCRIPTION') }} {% endif %}">
    {% block css %} {% endblock %}
    <title>{% block title %} {{ constant('WEBSITE_TITLE') }}{% endblock %}</title>
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="header-bg text-light header-sm container-fluid">
        <nav class="navbar container-fluid d-flex justify-content-between align-items-center">
            <!-- Logo et bouton Menu -->
            <div class="d-flex align-items-center">
                <a class="navbar-brand d-flex align-items-center" href="index.php">
                    <img src="img/LogoPopCorn.png" alt="Logo" width="80" height="80" class="me-2">
                    VHS
                </a>
                <button class="btn btn-custom ms-2" type="button" data-bs-toggle="collapse" data-bs-target="#menuBar" aria-expanded="false" aria-controls="menuBar">
                    Menu
                </button>
            </div>
        
            <!-- Barre de recherche -->
            <form class="d-flex justify-content-center" style="flex-grow: 1;">
                <input class="form-control" type="search" placeholder="Barre de recherche" aria-label="Search" style="max-width: 400px;">
            </form>
            {% if utilisateurConnecte is null %}
            <!-- Boutons Connexion et Langue -->
            <div class="me-3">
                <a href="index.php?controleur=utilisateur&methode=connexion" class="btn btn-custom me-2">Connexion</a>
                <button class="btn btn-custom" type="button">FR</button>
            </div>
            {% else %}
            <div class="me-3">
                <a href="index.php?controleur=utilisateur&methode=deconnexion" class="btn btn-custom me-2">Deconnexion</a>
                <button class="btn btn-custom" type="button">FR</button>
            </div>
            {% endif %}

        </nav>

        <!-- Menu déroulant sous le bouton "Menu" -->
        <div class="collapse" id="menuBar">
            <div class="container py-2 d-flex justify-content-center">
                <a href="index.php?controleur=forum&methode=listerForum" class="btn btn-light-custom mx-2">Forum</a>


                <a href="index.php?controleur=jeux&methode=listeTableau" class="btn btn-light-custom mx-2">Jeux</a>

                <a href="index.php?controleur=watchlist&methode=listerWatchList&id={{ utilisateurConnecte.idUtilisateur }}" class="btn btn-light-custom mx-2">WatchList</a>


                <a href="index.php?controleur=Quizz&methode=listerQuizz" class="btn btn-light-custom mx-2">Quizz</a>

                <a href="index.php?controleur=utilisateur&methode=AllUtilisateurs" class="btn btn-light-custom mx-2">utilisateur</a> <!-- utilisateur A SUPPRIMER-->

                <a href="index.php?controleur=testNotif&methode=listerNotif&id={{ utilisateurConnecte.idUtilisateur }}" class="btn btn-light-custom mx-2">Profil</a>
                

            </div>
        </div>
    </header>

    <!-- Contenu principal avec flex-grow-1 pour prendre tout l'espace disponible -->
    <main class="flex-grow-1">
        {% block content %}
        {% endblock %}
    </main>

    <footer class="footer-bg text-center text-light py-3 mt-auto">
        <div class="container">
            <!-- Liens de Navigation -->
            <div class="footer-nav mb-3">
                <a href="#" class="footer-link mx-2">Accueil</a>
                <a href="#" class="footer-link mx-2">A propos</a>
                <a href="#" class="footer-link mx-2">Contact</a>
                <a href="#" class="footer-link mx-2">Newletter</a>
            </div>

            <!-- Icônes des réseaux sociaux -->
            <div class="footer-social mb-2">
                <a href="#"><i class="fab fa-facebook-f mx-2"></i></a>
                <a href="#"><i class="fab fa-twitter mx-2"></i></a>
                <a href="#"><i class="fab fa-youtube mx-2"></i></a>
            </div>

            <!-- Copyright -->
            <div class="footer-copyright">
                © Copyright 2024 - IUT de Bayonne et du Pays Basque - BUT2 Groupe 8
            </div>
        </div>
    </footer>

    {% block script %} {% endblock %}
</body>
</html>
